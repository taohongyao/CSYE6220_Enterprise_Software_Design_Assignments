<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>movieServlet</servlet-name>
        <servlet-class>com.csye6220.Assignment03.controller.MovieController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>movieServlet</servlet-name>
        <url-pattern>/movie/</url-pattern>
        <url-pattern>/movie/movie.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>csvServlet</servlet-name>
        <servlet-class>com.csye6220.Assignment03.controller.CSVController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>csvServlet</servlet-name>
        <url-pattern>/csv/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookServlet</servlet-name>
        <servlet-class>com.csye6220.Assignment03.controller.BookController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>bookServlet</servlet-name>
        <url-pattern>/books/</url-pattern>
        <url-pattern>/books/books.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>storeController</servlet-name>
        <servlet-class>com.csye6220.Assignment03.controller.StoreController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>storeController</servlet-name>
        <url-pattern>/store/</url-pattern>
    </servlet-mapping>

</web-app>